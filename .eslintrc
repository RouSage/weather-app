{
    "plugins": [
        "prettier",
        "react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": [
        "airbnb",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error"
        ],
        "no-trailing-spaces": 2,
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react/prefer-es6-class": 1,
        "react/require-default-props": "off",
        "react/forbid-prop-types": "off",
        "react/state-in-constructor": "off",
        "react/jsx-one-expression-per-line": 0
    }
}
